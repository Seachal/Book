<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_site_siteName" tools:text="笔趣阁"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_site_url"
            tools:text="https://www.biyuwu.cc/" app:layout_constraintStart_toEndOf="@+id/item_site_siteName"
            app:layout_constraintTop_toTopOf="@+id/item_site_siteName" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/item_site_switch" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_site_author" tools:text="作者:zzzia"
            app:layout_constraintTop_toTopOf="@+id/item_site_classify"
            app:layout_constraintStart_toEndOf="@+id/item_site_classify" android:layout_marginStart="16dp"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_site_switch" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_site_deliver"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_site_time" app:layout_constraintStart_toEndOf="@+id/item_site_author"
            app:layout_constraintTop_toTopOf="@+id/item_site_author" android:layout_marginStart="16dp"
            tools:text="2019/6/2" app:layout_constraintEnd_toStartOf="@+id/item_site_switch"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_site_classify" tools:text="分类"
            app:layout_constraintStart_toStartOf="@+id/item_site_siteName"
            app:layout_constraintTop_toBottomOf="@+id/item_site_siteName" android:layout_marginTop="8dp"
    />
    <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="@color/alpha_black"
            android:id="@+id/item_site_deliver"
            app:layout_constraintTop_toBottomOf="@+id/item_site_classify"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>